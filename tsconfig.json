{
  "compilerOptions": {
    "target": "ES2017",
    "module": "CommonJS",
    "outDir": "./dist",
    "strict": true,
    "baseUrl": "./",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node"
    ],
    "removeComments": true,
    "esModuleInterop": true,
    "inlineSourceMap": false
  },
  "include": ["./**/*.ts"],
  "exclude": [
    "node_modules",
    "node_modules/**/*",
    ".serverless/**/*"
  ]
}